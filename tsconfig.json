{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "./dist/",
    "sourceMap": false,
    "declaration": true,
    "noImplicitAny": true,
    "target": "es5",
    "types": ["jest", "node"],
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  }
}